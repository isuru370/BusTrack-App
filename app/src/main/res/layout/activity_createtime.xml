<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Createtime_activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Added Time"
                android:textSize="22dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bus Number"
            android:textColor="@color/black" />

        <Spinner
            android:id="@+id/userbusid"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select City"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <Spinner
                android:id="@+id/startcityid"
                android:layout_width="190dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:entries="@array/choose_strat_city"/>

            <Spinner
                android:id="@+id/endcityid"
                android:layout_width="190dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:entries="@array/choose_end_city"/>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Select Time"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/starttime"
                android:layout_width="190dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:hint="Start Time (Clik)"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/endtime"
                android:layout_width="190dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:hint="End Time (Clik)"
                android:textSize="14dp" />

        </LinearLayout>


        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/citychange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp" />



        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Time Set"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:background="@color/purple_700"
            android:textColor="@color/white"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>