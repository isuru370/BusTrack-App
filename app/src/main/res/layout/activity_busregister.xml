<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Busregister_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bus Register"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/purple_700"/>

        <EditText
            android:id="@+id/busno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bus No"
            android:paddingLeft="10dp"
            android:textSize="16dp"
            android:layout_margin="20dp"
            android:textStyle="normal"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/busrootno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Root No"
            android:paddingLeft="10dp"
            android:textSize="16dp"
            android:layout_margin="20dp"
            android:textStyle="normal"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/busstartcity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Start City"
        android:paddingLeft="10dp"
        android:textSize="16dp"
        android:layout_margin="20dp"
        android:textStyle="normal"
        android:textColor="@color/black"/>

        <EditText
            android:id="@+id/busendcity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="End City"
            android:paddingLeft="10dp"
            android:textSize="16dp"
            android:layout_margin="20dp"
            android:textStyle="normal"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/busdistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Maximum Distance"
            android:paddingLeft="10dp"
            android:textSize="16dp"
            android:layout_margin="20dp"
            android:textStyle="normal"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/busfare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fare"
            android:textAllCaps="true"
            android:paddingLeft="10dp"
            android:textSize="16dp"
            android:layout_margin="20dp"
            android:textStyle="normal"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/bussubmitbtn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Done"
            android:background="@color/purple_700"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>