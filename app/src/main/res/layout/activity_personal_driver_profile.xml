<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Personal_driver_profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/th"
                    android:layout_gravity="center_horizontal"
                    app:shapeAppearanceOverlay="@style/round_image"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Achintha isuru fernando"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Driver Details"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="34dp"
            android:textColor="@color/black"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            android:layout_gravity="center"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_baseline_edit_24"
                    android:layout_gravity="right"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email Address"
                    android:textColor="@color/black"
                    android:textSize="16dp"/>
                <EditText
                    android:id="@+id/proemaiid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="isurufernando000@gmail.com"
                    android:textSize="14dp"
                    android:layout_marginTop="2dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_marginTop="10dp"/>
                <EditText
                    android:id="@+id/prophonenoid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0768971213"
                    android:textSize="14dp"
                    android:layout_marginTop="2dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Licence number"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_marginTop="10dp"/>
                <EditText
                    android:id="@+id/prolicenceid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7787964545-87"
                    android:textSize="14dp"
                    android:layout_marginTop="2dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nic number"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_marginTop="10dp"/>
                <EditText
                    android:id="@+id/pronicid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="982282055V"
                    android:textSize="14dp"
                    android:layout_marginTop="2dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home Address"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_marginTop="10dp"/>
                <EditText
                    android:id="@+id/prohomeaddid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4th mail post padavi parakramapura"
                    android:textSize="14dp"
                    android:layout_marginTop="2dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <Button
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:text="App Setting"
            android:background="@color/purple_700"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:gravity="left|center"
            android:paddingLeft="20dp"/>
        <Button
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:text="Personal Info"
            android:background="@color/purple_700"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:layout_marginTop="5dp"/>
        <Button
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:text="Change Email and password"
            android:background="@color/purple_700"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="50dp"/>



    </LinearLayout>

</androidx.core.widget.NestedScrollView>