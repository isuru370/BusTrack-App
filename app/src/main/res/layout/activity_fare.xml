<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fare_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fare Ditails"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>



        <Button
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="Fare"
            android:textAllCaps="false"
            android:background="@color/purple_700"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/busno1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bus Number"
            android:textSize="25dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:text="M/C 001"
            android:textStyle="bold"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/status1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bus Status"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/rootno1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Root Number"
            android:textSize="25dp"
            android:gravity="left"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"/>

        <EditText
            android:id="@+id/citys1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Strat City"
            android:textSize="25dp"
            android:gravity="left"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"/>

        <EditText
            android:id="@+id/citye1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="End Number"
            android:textSize="25dp"
            android:gravity="left"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"/>


        <EditText
            android:id="@+id/km1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="KM"
            android:textSize="25dp"
            android:gravity="left"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"/>

        <EditText
            android:id="@+id/mcost1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Minimum coust"
            android:textSize="25dp"
            android:gravity="left"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"/>

        <EditText
            android:id="@+id/fare1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="The fee"
            android:textSize="25dp"
            android:gravity="left"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"/>

        <Button
            android:id="@+id/busEditBtn"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:text="Edit"
            android:textAllCaps="false"
            android:background="@color/purple_700"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/faretimetbtn"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:text="Time Table"
            android:textAllCaps="false"
            android:background="@color/purple_700"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_marginTop="30dp"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>